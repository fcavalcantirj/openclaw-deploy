{
  "gateway": {
    "bind": "loopback",
    "port": 18789,
    "auth": {
      "mode": "token"
    }
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "dmPolicy": "pairing",
      "token": "TELEGRAM_BOT_TOKEN_PLACEHOLDER"
    }
  },
  "http": {
    "chatCompletions": {
      "enabled": true,
      "allowedOrigins": ["*"]
    }
  },
  "logging": {
    "redactSensitive": true,
    "level": "info"
  },
  "skills": {
    "openai-whisper-api": {
      "enabled": false,
      "apiKey": "OPENAI_API_KEY_PLACEHOLDER"
    }
  }
}
